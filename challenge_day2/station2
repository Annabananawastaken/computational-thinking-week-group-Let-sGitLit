import datetime

def get_weekday_in_chinese(year, month, day):
    
    weekday_translation = {
        "Monday": "星期一",
        "Tuesday": "星期二",
        "Wednesday": "星期三",
        "Thursday": "星期四",
        "Friday": "星期五",
        "Saturday": "星期六",
        "Sunday": "星期日"
    }
    
    
    date = datetime.datetime(year, month, day)
    weekday_name = date.strftime("%A")
    weekday_name_chinese = weekday_translation[weekday_name]
    return weekday_name_chinese


chinese_weekday = get_weekday_in_chinese(2024, 9, 3)
print(chinese_weekday)
